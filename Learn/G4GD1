/**
https://practice.geeksforgeeks.org/problems/47e5aa3f32aee9e0405f04960f37c8a562d96a2f/1/?track=30-DOC-day-1&batchId=320
Input:
N = 6
a[] = {0, 5, 1, 2, 4, 3}
Output: {0, 3, 5, 1, 4, 2}

Input:
N = 5
a[] = {4, 3, 2, 1, 0}
Output: {0, 1, 2, 3, 4}

**/


#include <bits/stdc++.h>
using namespace std;

class SolutionExtraSpace
{
    public:
    void prank(long long a[], int n)
    {
        long long modified[n];

        for (int i = 0; i < n; ++i)
        {
            modified[i] = a[i];
        }

        for (int i = 0; i < n; ++i)
        {
            a[i] = modified[modified[i]];
        }
    }
};

class Solution
{
    public:
    void prank(long long a[], int n)
    {
        for (int i = 0; i < n; ++i)
        {
            a[i] = a[i] + (a[a[i]] % n) *n;
            cout << a[i] << " ";
        }

        for (int i = 0; i < n; ++i)
        {
            a[i] = a[i] / n;
        }
    }
};
